---
interface Props {
	date: string;
}

const { date : stringDate } = Astro.props;
let date = null;
let display = "";
try {
    const date = new Date(stringDate);
    display = 	date.toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
        timeZone: 'UTC' // Crucially, set the timeZone to 'UTC' to ignore local time

    })
} catch {
    display = 'none';
}
---
<time datetime={date ? date.toISOString() : ''}>
    {display}
</time>
