---
import type { CollectionEntry } from "astro:content";
import AllPreviews from "../GardenPreviews/AllPreviews.astro";

interface Props {
    posts: Array<CollectionEntry<"books">> | Array<CollectionEntry<"links">> | Array<CollectionEntry<"garden">>
}

const {posts} = Astro.props
---

<ul class="list">
{posts.map((post) => {
    let typeMap = {
        "books": "book",
        "links": "link",
        "garden": "note",
        "blog": "blog",
        "recipes": "recipe"
    }
    return <AllPreviews type={typeMap[post.collection]} posts={[post]} />

    })}
</ul>

<style>
    ul {
        list-style: none;
        margin: 0;
        padding: 0;
        max-width: 100%;
    }

    .item {
        max-width: 100%;
    }
</style>